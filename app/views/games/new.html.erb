<h1>Longest Word Game</h1>

<p>Here is your random letter grid:</p>
<p><%= @letters.join(" ") %></p>

<!-- Form for submitting the word -->
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join %>

  <label for="word">Type a word:</label>
  <input type="text" name="word" id="word" required>

  <input type="submit" value="Submit">
</form>
